{% import "templates.njk" as templates %}

<!--This is the customer reviews section-->
<section
  class="homec-bg-third-color homec-bg-cover  pd-top-120 pd-btm-70"
  style="background-image: url('/img/bg-shape-one.svg');"
  hx-tailor-reviews
>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div
          class="homec-section__head text-center mg-btm-60"
          style="margin-top: -50px;"
        >
          <span
            class="homec-section__badge homec-primary-color homec-section__badge--small m-0 aos-init aos-animate"
            data-aos="fade-in"
            data-aos-delay="300"
            style=" font-size: 30px; font-weight: bold;"
            >Customer Reviews</span
          >
        </div>
      </div>
    </div>
    <div class="homec-pdetails-tab--review">
      {% for review in reviews %}
        {{ templates.review(review) }}
        <br />
      {% endfor %}

      <!--bottom pagination section-->
      <div class="row mg-top-40">
        <div class="homec-pagination">
          <ul class="homec-pagination__list list-none">
            {% for i in range(0, (filteration.filtrate / pagination.limit) | ceil) %}
              <li
                class="{{ "active" if i === (pagination.offset / pagination.limit) else "" }}"
              >
                <a
                  hx-get="/tailors/reviews?offset={{ i * pagination.limit }}&limit={{ pagination.limit }}&match-tailor={{ query["match-tailor"] }}"
                  hx-boost="true"
                  hx-target="[hx-tailor-reviews]"
                  hx-swap="innerHTML"
                  style="cursor: pointer;"
                >
                  {{ (i + 1).toString().padStart(2, "0") }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
